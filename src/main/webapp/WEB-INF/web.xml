<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>com.ilya.restapiapp.controller.FileRestControllerV1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventServlet</servlet-name>
        <servlet-class>com.ilya.restapiapp.controller.EventRestControllerV1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRestControllerV1</servlet-name>
        <servlet-class>com.ilya.restapiapp.controller.UserRestControllerV1</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserRestControllerV1</servlet-name>
        <url-pattern>/api/v1/users/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileServlet</servlet-name>
        <url-pattern>/api/v1/files/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventServlet</servlet-name>
        <url-pattern>/api/v1/events/*</url-pattern>
    </servlet-mapping>


</web-app>
